{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "style/*": [
        "./style/*"
      ],
      "store/*": [
        "./store/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "prisma/*": [
        "./prisma/*"
      ],
      "data/*":[
        "./data/*"
      ],
      "public/*":[
        "./public/*"
      ],
      "api/*": [
        "pages/api/api/*"
      ]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    // "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Common/Element/Block.tsx", "components/Table/newTable.tsx", "components/Menu/drawer.js", "pages/_app.js",
    // "pages/[lang]/pallet-config/index.js"
  ]
}
